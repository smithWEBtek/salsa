<h1>Songs</h1>

<% @songs.each do |song| %>
  <h3><%= song.title %></h3>
  <p>slug: <%= song.slug %></p>
  <p>audio_path: <%= song.audio %></p>
  <% if song.audio %>
    <figure>
      <audio
        controls
        src=<%= audio_path(song.audio) %>
        type="audio/mp3"
        Your browser does not support the audio element.
      </audio>
    </figure>
  <% end %>
<% end %>